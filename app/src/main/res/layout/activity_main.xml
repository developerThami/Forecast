<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:id="@+id/weather_background"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="fitCenter"
            android:background="@color/cloudy"
            app:layout_constraintBottom_toTopOf="@id/temperature_information"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/temperature_description"
            app:layout_constraintTop_toBottomOf="@id/current_temperature"
            app:layout_constraintLeft_toLeftOf="@id/current_temperature"
            app:layout_constraintRight_toRightOf="@id/current_temperature"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/current_temperature"
            app:layout_constraintTop_toTopOf="@id/weather_background"
            app:layout_constraintLeft_toLeftOf="@id/weather_background"
            app:layout_constraintRight_toRightOf="@id/weather_background"
            app:layout_constraintBottom_toBottomOf="@id/weather_background"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/temperature_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/weather_background"
            app:layout_constraintBottom_toTopOf="@id/weather_list"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

        <TextView
                android:id="@+id/min_temperature"
                android:layout_margin="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:gravity="center_horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/temperature"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        <TextView
                app:layout_constraintTop_toBottomOf="@id/min_temperature"
                app:layout_constraintLeft_toLeftOf="@id/min_temperature"
                android:gravity="center_horizontal"
                android:text="@string/min"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="@id/min_temperature"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/temperature"
                android:layout_margin="10dp"
                app:layout_constraintLeft_toRightOf="@id/min_temperature"
                app:layout_constraintRight_toLeftOf="@id/max_temperature"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center_horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        <TextView
                app:layout_constraintRight_toRightOf="@id/temperature"
                app:layout_constraintLeft_toLeftOf="@id/temperature"
                app:layout_constraintTop_toBottomOf="@id/temperature"
                android:gravity="center_horizontal"
                android:text="@string/current"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/max_temperature"
                android:layout_margin="10dp"
                app:layout_constraintLeft_toRightOf="@id/temperature"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center_horizontal"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        <TextView
                app:layout_constraintLeft_toLeftOf="@id/max_temperature"
                app:layout_constraintTop_toBottomOf="@id/max_temperature"
                android:gravity="center_horizontal"
                android:text="@string/max"
                app:layout_constraintRight_toRightOf="@id/max_temperature"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/weather_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/temperature_information"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>